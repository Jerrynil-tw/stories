  <script type="text/javascript">
    $(document).ready(function() {

      $(".closed-box").mouseenter(function() {
          $(".open-box").show();
          $(".closed-box").hide();
          $(this).hide();
      });

      $(".open-box").mouseout(function() {
        $(".closed-box").show();
        $(".open-box").hide();
        $(this).hide();
      });
    });
    $(document).ready(function() {

      $(".closed-stack").mouseenter(function() {
          $(".open-stack").show();
          $(".closed-stack").hide();
          $(this).hide();
      });

      $(".open-stack").mouseout(function() {
        $(".closed-stack").show();
        $(".open-stack").hide();
        $(this).hide();
