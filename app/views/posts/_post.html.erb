<div class="post-panel">
  <% if user_signed_in? %>
    <%= render partial: 'posts/feed_metadata', locals: { post: PostDecorator.new(post, current_user) } %>
  <% end %>

  <% if post.picture? %>
    <div class="post-picture-wrapper">
      <%= image_tag post.picture.url(:thumb) %>
    </div>
  <% end %>

  <div class="main-body">
    <h3 class="post-title" style="padding-bottom: 3px"><%= link_to post.title, post %></h3>

    <div class="post-tags" style="padding-top: 10px">
      <% post.tags.each do |tag| %>
        <%= link_to tag.name, tag, class: 'tag' %>
      <% end %>
    </div>
    <br>


    <%= render partial: 'posts/post_metadata', locals: { post: post } %>
    <br>
    <% if post.lead %>
      <div class="post-body" style="padding-top: 10px;"><%= post.lead.truncate(100).gsub(/<\/?[^>]*>/, "") %></div>
      <%= link_to "繼續閱讀", post, class: 'read-more' %>
    <% end %>
  </div>

</div>
