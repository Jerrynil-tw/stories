
  <div class="flex-container col-xs-12 col-md-6" style="padding-bottom: 25px;">
    <div class="avatar-wrapper">
      <%= avatar_for(post.user, size: 40) %>
      <br>
      <p style="font-size: 11px; text-align: center;">
        <%= post.username %>
      </p>
    </div>
    <div class="post-info">
      <h3 class="small-heading">相關文章</h3>
      <strong class="pli-title"><%= link_to post.title, post %></strong>
      <br>

    </div>
  </div>

